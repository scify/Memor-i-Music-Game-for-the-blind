<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<StackPane alignment="center" styleClass="rootPane" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.scify.windmusicgame.screens.GameSelectionScreenController">
    <HBox alignment="BOTTOM_RIGHT" spacing="5" styleClass="logoContainer">
        <ImageView styleClass="boxImage">
            <image>
                <Image url="@../img/logo.png" />
            </image>
        </ImageView>
    </HBox>
    <VBox alignment="center" styleClass="optionButtonContainer">
        <Button contentDisplay="CENTER" styleClass="welcomeButton" text="Επιλέξτε ένα από τα επόμενα παιχνίδια" fx:id="welcome"/>
        <Button contentDisplay="CENTER" styleClass="optionButton, largeButton" text="Βρείτε το είδος του οργάνου" fx:id="findInstrumentFamiliesGame" onKeyPressed="#initializeGame"/>
        <Button contentDisplay="CENTER" styleClass="optionButton, largeButton" text="Βρείτε το όργανο" fx:id="findInstrumentGame" onKeyPressed="#initializeGame"/>
        <Button contentDisplay="CENTER" styleClass="optionButton, largeButton" text="Βρείτε τη νότα" fx:id="findNoteGame" onKeyPressed="#initializeGame"/>
        <Button contentDisplay="CENTER" styleClass="optionButton" text="Επιστροφή" fx:id="back" onKeyPressed="#backToMainScreen"/>
        <Button contentDisplay="CENTER" styleClass="optionButton" text="Χορηγός" fx:id="sponsors" onKeyPressed="#goToSponsorsScreen"/>
    </VBox>

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
</StackPane>
